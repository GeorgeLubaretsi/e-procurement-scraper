PROJECT=~/Projects/Procurement/
SCRAPER=scraper/
LOCKFILE=running.txt
SPIDER=procurementScrape/spiders/procurement_spider.py
OUTPUT=app/current
FIXPATH="IncrementalScrapes/2013-07-02 16:07"
FIXFILE="_FIX"

BIDRESULTFILE="/bidderResult.json"
ORGFILE="/organisations.json"
AGREEFILE="/tenderAgreements.json"
BIDFILE="/tenderBidders.json"
TENDERSFILE="/tenders.json"
DOCFILE="/tenderDocumentation.json"
CPVFILE="/tenderCPVCode.json"
cd $PROJECT$SCRAPER
echo $PROJECT$SCRAPER$FIXPATH$FIXFILE$BIDRESULTFILE
echo $PROJECT$SCRAPER$FIXPATH$BIDRESULTFILE
if [ ! -f $PROJECT$SCRAPER$LOCKFILE ]; then
	touch $PROJECT$SCRAPER$LOCKFILE
	python $PROJECT$SCRAPER$SPIDER FIXERRORS $PROJECT$OUTPUT "$PROJECT$SCRAPER$FIXPATH"
  #concat files  
  cat "$PROJECT$SCRAPER$FIXPATH$FIXFILE$BIDRESULTFILE" >> "$PROJECT$SCRAPER$FIXPATH$BIDRESULTFILE"
  cat "$PROJECT$SCRAPER$FIXPATH$FIXFILE$ORGFILE" >> "$PROJECT$SCRAPER$FIXPATH$ORGFILE"
  cat "$PROJECT$SCRAPER$FIXPATH$FIXFILE$AGREEFILE" >> "$PROJECT$SCRAPER$FIXPATH$AGREEFILE"
  cat "$PROJECT$SCRAPER$FIXPATH$FIXFILE$BIDFILE" >> "$PROJECT$SCRAPER$FIXPATH$BIDFILE"
  cat "$PROJECT$SCRAPER$FIXPATH$FIXFILE$TENDERSFILE" >> "$PROJECT$SCRAPER$FIXPATH$TENDERSFILE"
  cat "$PROJECT$SCRAPER$FIXPATH$FIXFILE$DOCFILE" >> "$PROJECT$SCRAPER$FIXPATH$DOCFILE"
  cat "$PROJECT$SCRAPER$FIXPATH$FIXFILE$CPVFILE" >> "$PROJECT$SCRAPER$FIXPATH$CPVFILE"
	rm $PROJECT$SCRAPER$LOCKFILE
fi
